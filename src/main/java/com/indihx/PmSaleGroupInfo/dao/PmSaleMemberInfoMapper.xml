<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.indihx.PmSaleGroupInfo.dao.PmSaleMemberInfoMapper">

	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap
		type="com.indihx.PmSaleGroupInfo.entity.PmSaleMemberInfoEntity"
		id="pmSaleMemberInfoMap">
		<result property="menberUsrId" column="MENBER_USR_ID" />
		<result property="groupCode" column="GROUP_CODE" />
		<result property="memberType" column="MEMBER_TYPE" />
		<result property="remark" column="REMARK" />
		<result property="creatorId" column="CREATOR_ID" />
		<result property="createTime" column="CREATE_TIME" />
		<result property="modifier" column="MODIFIER" />
		<result property="modifyTime" column="MODIFY_TIME" />
		<result property="isDelete" column="IS_DELETE" />
		<result property="ownerOrgName" column="OWNER_ORG_NAME" />
	</resultMap>

	<select id="queryObject" resultMap="pmSaleMemberInfoMap">
		select * from
		pm_sale_member_info where MENBER_USR_ID = #{value}
	</select>

	<select id="queryList" resultMap="pmSaleMemberInfoMap">
		select
		*
		from pm_sale_member_info
		<trim prefix="WHERE" prefixOverrides="AND|OR"
			suffixOverrides="AND|OR">
			<if test="menberUsrId != null and menberUsrId!=''">
				MENBER_USR_ID =
				#{menberUsrId} AND
			</if>
			<if test="groupCode != null and groupCode!=''">
				GROUP_CODE =
				#{groupCode} AND
			</if>
			<if test="memberType != null and memberType!=''">
				MEMBER_TYPE =
				#{memberType} AND
			</if>
			<if test="remark != null and remark!=''">
				REMARK = #{remark} AND
			</if>
			<if test="creatorId != null and creatorId!=''">
				CREATOR_ID =
				#{creatorId} AND
			</if>
			<!-- 开始时间 -->
			<if test="createTime != null and createTime!=''">
				CREATE_TIME <![CDATA[>=]]>
				#{createTimeStart} AND
			</if>
			<!-- 结束时间 -->
			<if test="createTime != null and createTime!=''">
				CREATE_TIME <![CDATA[<=]]>
				#{createTimeEnd} AND
			</if>
			<if test="modifier != null and modifier!=''">
				MODIFIER =
				#{modifier} AND
			</if>
			<!-- 开始时间 -->
			<if test="modifyTime != null and modifyTime!=''">
				MODIFY_TIME <![CDATA[>=]]>
				#{modifyTimeStart} AND
			</if>
			<!-- 结束时间 -->
			<if test="modifyTime != null and modifyTime!=''">
				MODIFY_TIME <![CDATA[<=]]>
				#{modifyTimeEnd} AND
			</if>
			<if test="isDelete != null and isDelete!=''">
				IS_DELETE =
				#{isDelete}
			</if>
		</trim>
	</select>

	<select id="queryTotal" resultType="int">
		select count(*) from
		pm_sale_member_info
	</select>

	<insert id="insert"
		parameterType="com.indihx.PmSaleGroupInfo.entity.PmSaleMemberInfoEntity">
		insert into pm_sale_member_info
		(
		MENBER_USR_ID
			,GROUP_CODE
		<if test="memberType != null and memberType!=''">
			,MEMBER_TYPE
		</if>
		<if test="remark != null and remark!=''">
			,REMARK
		</if>
		<if test="creatorId != null and creatorId!=''">
			,CREATOR_ID
		</if>
		<if test="createTime != null and createTime!=''">
			,CREATE_TIME
		</if>
		<if test="modifier != null and modifier!=''">
			,MODIFIER
		</if>
		<if test="modifyTime != null and modifyTime!=''">
			,MODIFY_TIME
		</if>
		<if test="ownerOrgName != null and ownerOrgName!=''">
			,OWNER_ORG_NAME
		</if>
			,IS_DELETE
		)
		values
		(
		#{menberUsrId}
			,#{groupCode}
		<if test="memberType != null and memberType!=''">
			,#{memberType}
		</if>
		<if test="remark != null and remark!=''">
			,#{remark}
		</if>
		<if test="creatorId != null and creatorId!=''">
			,#{creatorId}
		</if>
		<if test="createTime != null and createTime!=''">
			,#{createTime}
		</if>
		<if test="modifier != null and modifier!=''">
			,#{modifier}
		</if>
		<if test="modifyTime != null and modifyTime!=''">
			,#{modifyTime}
		</if>
		<if test="ownerOrgName != null and ownerOrgName!=''">
			,#{ownerOrgName}
		</if>
			,'00'
		)
	</insert>

	<update id="update"
		parameterType="com.indihx.PmSaleGroupInfo.entity.PmSaleMemberInfoEntity">
		update pm_sale_member_info
		<set>
			<if test="groupCode != null and groupCode!=''">GROUP_CODE = #{groupCode}, </if>
			<if test="memberType != null and memberType!=''">MEMBER_TYPE = #{memberType}, </if>
			<if test="remark != null and remark!=''">REMARK = #{remark}, </if>
			<if test="creatorId != null and creatorId!=''">CREATOR_ID = #{creatorId}, </if>
			<if test="createTime != null and createTime!=''">CREATE_TIME = #{createTime}, </if>
			<if test="modifier != null and modifier!=''">MODIFIER = #{modifier}, </if>
			<if test="modifyTime != null and modifyTime!=''">MODIFY_TIME = #{modifyTime}, </if>
			<if test="isDelete != null and isDelete!=''">IS_DELETE = #{isDelete}</if>
			<if test="ownerOrgName != null and ownerOrgName!=''">OWNER_ORG_NAME = #{ownerOrgName}</if>
		</set>
		where MENBER_USR_ID = #{menberUsrId}
	</update>

	<delete id="delete">
		delete from pm_sale_member_info where GROUP_CODE =
		#{value}
	</delete>



</mapper>